<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.1.dtd" >

<suite name="API Suit">

    <test name="Login Tests">
        <classes>
            <class name = "testCases.APITests.LoginWithValidUser"> </class>
            <class name = "testCases.APITests.LoginWithInvalidUser"> </class>
        </classes>
    </test>

    <test name="Create Tests">
        <classes>
            <class name = "testCases.APITests.CreateNewBookingWithDynamicRandomData"> </class>
            <class name = "testCases.APITests.CreateNewBookingWithStaticData"> </class>
        </classes>
    </test>

    <test name="Update Tests">
        <classes>
            <class name = "testCases.APITests.UpdateExistingBookingWithDynamicRandomData"> </class>
            <class name = "testCases.APITests.UpdateExistingBookingWithStaticData"> </class>
        </classes>
    </test>
</suite>